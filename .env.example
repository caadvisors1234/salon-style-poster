# PostgreSQL設定
POSTGRES_USER=salon_board_user
POSTGRES_PASSWORD=your_strong_db_password_here
POSTGRES_DB=salon_board_db
POSTGRES_SERVER=db
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_SERVER}:${POSTGRES_PORT}/${POSTGRES_DB}

# Redis設定
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# JWT設定
SECRET_KEY=your_very_secret_key_for_jwt_min_32_characters_long
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# 暗号化設定（Fernetキー: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())" で生成）
ENCRYPTION_KEY=your_32_byte_base64_encoded_fernet_key_here

# アプリケーション設定
APP_NAME=SALON BOARD Style Poster
APP_VERSION=1.0.0
DEBUG=False

# CORS設定（開発環境用）
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# スクリーンショット保全ポリシー
SCREENSHOT_DIR=app/static/screenshots
SCREENSHOT_RETENTION_DAYS=30
SCREENSHOT_DIR_MAX_BYTES=524288000
